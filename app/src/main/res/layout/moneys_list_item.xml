<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/moneyFullNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Американский доллар"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64,95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buyTV"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_up" />

    <ImageView
        android:id="@+id/moneyIconIV"
        android:layout_width="39dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toTopOf="@+id/moneyFullNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/dm"/>

    <TextView
        android:id="@+id/cellTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64,95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrows_down" />

    <TextView
        android:id="@+id/moneyNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="USD"
        app:layout_constraintBottom_toTopOf="@+id/moneyFullNameTV"
        app:layout_constraintStart_toEndOf="@+id/moneyIconIV"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>